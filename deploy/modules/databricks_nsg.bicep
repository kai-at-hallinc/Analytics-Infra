          priority: 105
          direction: 'Outbound'
        }
      }
      {
        name: 'Microsoft.Databricks-workspaces_UseOnly_databricks-worker-to-azuremonitor'
        properties: {
          description: 'Required for worker communication with Azure Monitor services.'
          protocol: 'Tcp'
          sourcePortRange: '*'
